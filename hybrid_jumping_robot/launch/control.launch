<launch>

    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find hybrid_jumping_robot)/config/hybrid_robotV0_2_control.yaml" command="load"/>

    <!-- load the controllers -->
    <node name="controller_spawner_pos" pkg="controller_manager" type="spawner" respawn="false"
          output="screen" ns="/hybrid_robotV0_2" args=" extension_base_joint_position_controller
                                                        back_left_wheel_joint_position_controller
                                                        front_left_wheel_joint_position_controller
                                                        back_right_wheel_joint_position_controller
                                                        front_right_wheel_joint_position_controller
                                                        "/>

    <!-- load the controllers -->
    <node name="controller_spawner_eff" pkg="controller_manager" type="spawner" respawn="false"
          output="screen" ns="/hybrid_robotV0_2" args=" back_left_wheel_joint_effort_controller
                                                        front_left_wheel_joint_effort_controller
                                                        back_right_wheel_joint_effort_controller
                                                        front_right_wheel_joint_effort_controller
                                                        extension_base_joint_effort_controller
                                                        "/>
    <!-- load the controllers -->
    <node name="controller_spawner_vel" pkg="controller_manager" type="spawner" respawn="false"
          output="screen" ns="/hybrid_robotV0_2" args=" back_left_wheel_joint_velocity_controller
                                                        front_left_wheel_joint_velocity_controller
                                                        back_right_wheel_joint_velocity_controller
                                                        front_right_wheel_joint_velocity_controller
                                                        extension_base_joint_velocity_controller
                                                        "/>
    <node name="controller_spawner_cont" pkg="controller_manager" type="spawner" respawn="false"
          output="screen" ns="/hybrid_robotV0_2" args=" joint_state_controller"/>

    <!-- convert joint states to TF transforms for rviz, etc -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
          respawn="false" output="screen">
        <remap from="/joint_states" to="/hybrid_robotV0_2/joint_states" />
    </node>

</launch>